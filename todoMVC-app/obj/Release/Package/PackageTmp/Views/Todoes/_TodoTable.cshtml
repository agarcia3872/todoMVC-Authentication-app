@model IEnumerable<todoMVC_app.Models.Todo>

<div id="todoProgressBar">
    <div class="percentage">
        <p>@(ViewBag.Percent)%</p>
    </div>
    
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width:@(Html.AttributeEncode(ViewBag.Percent))%">
        </div>
    </div>

</div>

<table class="table">
    <tr>
        <th class="desc-label">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.IsDone)
        </th>*@
        <th class="desc-label"></th>
        <th class="desc-label"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.IsDone)
                { 
                    @Html.DisplayFor(modelItem => item.Description)
                }else
                {
                <div class="completedTask">
                    @Html.DisplayFor(modelItem => item.Description)
                </div>
                    
                }

            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.IsDone, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/MyScripts/AddCheckBoxListener.js"></script>

